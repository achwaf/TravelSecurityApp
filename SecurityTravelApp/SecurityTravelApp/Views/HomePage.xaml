<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:comp="clr-namespace:SecurityTravelApp.Views"
             xmlns:viewUtils="clr-namespace:SecurityTravelApp.Views.ViewsUtils"
             x:Class="SecurityTravelApp.Views.HomePage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="white">
    <ContentPage.Resources>


    </ContentPage.Resources>
    <ContentPage.Content>
        <AbsoluteLayout >
            <Grid BackgroundColor="White" AbsoluteLayout.LayoutFlags="All"
                AbsoluteLayout.LayoutBounds=".5,.5,1,1"                  
                Margin="{StaticResource UpFrontViewMargin}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <comp:TapSliderComp x:Name="SosSlider" Grid.Row="1" Margin="20,0"/>
            </Grid>

            <StackLayout x:Name="StackLayoutUpFront"  VerticalOptions="End" AbsoluteLayout.LayoutFlags="YProportional , SizeProportional"
                    Margin="{StaticResource UpFrontViewMargin}"
                    AbsoluteLayout.LayoutBounds="0,1,1,1">

                <comp:NavigationBarComp x:Name="NavigationBar" VerticalOptions="End" HorizontalOptions="Fill" />

            </StackLayout>
        </AbsoluteLayout>

    </ContentPage.Content>
</ContentPage>
    