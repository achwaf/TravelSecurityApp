<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityTravelApp.Views.DefinedMessageComp">
    <ContentView.Content>
        <Grid>
            <BoxView x:Name="Highlight" HorizontalOptions="Fill" HeightRequest="50"  Color="White" Opacity=".2" Margin="5,0"/>
            <Label x:Name="Message" Text="{Binding message}" TextColor="White"
                   Margin="10,5"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   VerticalTextAlignment="Center"
                   HorizontalTextAlignment="Start"/>
        </Grid>
    </ContentView.Content>
</ContentView>