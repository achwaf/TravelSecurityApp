<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:comp="clr-namespace:SecurityTravelApp.Views"
             xmlns:viewUtils="clr-namespace:SecurityTravelApp.Views.ViewsUtils"
             x:Class="SecurityTravelApp.Views.NavigationBarComp">

    <ContentView.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="NavigationBarMargin" x:TypeArguments="Thickness" Default="10,0,10,0"/>

        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Frame
            HeightRequest="60"
            Padding="0"
            CornerRadius="20"
            IsClippedToBounds="true"
            HasShadow="true"
            BackgroundColor="WhiteSmoke"
            OutlineColor="WhiteSmoke">
            <FlexLayout x:Name="HorizontalLayout"
                    Direction="Row"
                    AlignItems="Stretch"
                    JustifyContent="SpaceEvenly"
                    Margin="{StaticResource NavigationBarMargin}"
                    VerticalOptions="End"/>
        </Frame>


    </ContentView.Content>
</ContentView>